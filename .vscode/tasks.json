{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CLI build",
      "type": "shell",
      "command": "cargo build",
      "options": {
        "cwd": "${workspaceRoot}/apps/framework-cli"
      }
    },
    {
      "label": "TS moose lib build",
      "type": "shell",
      "command": "pnpm --filter=@514labs/moose-lib run build",
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "TS moose connectors build",
      "type": "shell",
      "command": "pnpm --filter=@514labs/moose-connectors run build",
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "Build all",
      "dependsOn": [
        "CLI build",
        "TS moose lib build",
        "TS moose connectors build"
      ]
    }
  ]
}
